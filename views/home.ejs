<% layout('layouts/boilerplate') %>
<!-- Load home page CSS -->
<link rel="stylesheet" href="/css/home.css">

<!-- Hero Section -->
<div class="hero-section">
  <div class="container">
    <div class="hero-content">
      <!-- <span class="hero-emoji">🚻</span> -->
      <h1 class="hero-title">Where Is My Loo</h1>
      <p class="hero-subtitle">
        Find clean, accessible public toilets near you. No more worrying about finding facilities when you're out and about!
      </p>
      
      <div class="hero-buttons">
        <a href="/toilets" class="hero-btn">
          🔍 Find Toilets Now
        </a>
        <a href="/toilets/new" class="hero-btn hero-btn-secondary">
          ➕ Add a Toilet
        </a>
      </div>
    </div>
  </div>
</div>

<!-- Features Section -->
<div class="features-section">
  <div class="container">
    <h2 class="text-center mb-4">Why Choose Our Service?</h2>
    
    <div class="features-grid">
      <div class="feature-card">
        <span class="feature-icon">📍</span>
        <h3 class="feature-title">Location Based</h3>
        <p class="feature-description">
          Find toilets near your current location with GPS integration and distance tracking.
        </p>
      </div>
      
      <div class="feature-card">
        <span class="feature-icon">⭐</span>
        <h3 class="feature-title">User Reviews</h3>
        <p class="feature-description">
          Read real reviews from other users about cleanliness, accessibility, and facilities.
        </p>
      </div>
      
      <div class="feature-card">
        <span class="feature-icon">♿</span>
        <h3 class="feature-title">Accessibility Info</h3>
        <p class="feature-description">
          Clear information about wheelchair accessibility and special facilities available.
        </p>
      </div>
      
      <div class="feature-card">
        <span class="feature-icon">💰</span>
        <h3 class="feature-title">Free & Paid Options</h3>
        <p class="feature-description">
          Filter between free and paid facilities to find options that suit your budget.
        </p>
      </div>
      
      <div class="feature-card">
        <span class="feature-icon">🔒</span>
        <h3 class="feature-title">Safe & Clean</h3>
        <p class="feature-description">
          Community-verified locations with cleanliness ratings and safety information.
        </p>
      </div>
      
      <div class="feature-card">
        <span class="feature-icon">📱</span>
        <h3 class="feature-title">Mobile Friendly</h3>
        <p class="feature-description">
          Works perfectly on your phone for when you're on the go and need quick access.
        </p>
      </div>
    </div>
  </div>
</div>
<!-- tagline Section -->
<h1 style="
  text-align:center; 
  font-size:3.2rem; 
  font-weight:800; 
  
  line-height:1.3; 
  margin:3rem 0 2rem;
  background: linear-gradient(
    to bottom,
    #FF8000 0%,
    #FF8000 42%,
    #FFFFFF 42%,
    #FFFFFF 58%,
    #138808 58%,
    #138808 100%
  );
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  -webkit-text-stroke: 2px #000; /* deeper black outline */
">
  Swachh Bharat, Sundar Bharat!
</h1>

<!-- Stats Section -->
<div class="container">
  <div class="stats-section">
    <h2>Be Part of Our Growing Community</h2>
    <div class="stats-grid">
      <div class="stat-item">
        <span class="stat-number">20+</span>
        <span class="stat-label">Toilets Mapped</span>
      </div>
      <div class="stat-item">
        <span class="stat-number">100+</span>
        <span class="stat-label">Happy Users</span>
      </div>
      <div class="stat-item">
        <span class="stat-number">5+</span>
        <span class="stat-label">Cities Reached</span>
      </div>
      <div class="stat-item">
        <span class="stat-number">24/7</span>
        <span class="stat-label">Accessible Anytime</span>
      </div>
    </div>
    <p class="stats-note" style="margin-top:1.5rem; color:#f0f1f3; font-weight:500;">
  Thank you for helping us create a cleaner, more inclusive world — one toilet at a time.<br>
  Join the movement — add a toilet and empower your community.<br>
</p>
  </div>
<h1></h1>
</div>

