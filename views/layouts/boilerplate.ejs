<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Where Is My Loo ðŸš»</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="mapbox-token" content="<%= process.env.MAPBOX_TOKEN %>">

  <!-- <link rel="stylesheet" href="/css/reset.css"> -->
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Google+Sans:wght@300;400;500;600&display=swap" rel="stylesheet">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

  <!-- Our CSS (in correct order) -->

  <link rel="stylesheet" href="/css/modern-theme.css">
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel="stylesheet" href="/css/alerts.css">
  <link rel="stylesheet" href="/css/auth.css">

  <link rel="icon" type="image/png" sizes="32x32" href="/img/logo.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/img/logo.png">
  <link rel="apple-touch-icon" href="/img/logo.png">

</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <!-- UPDATE your boilerplate.ejs navbar brand section (around line 28) -->
      <a class="navbar-brand" href="/">
        <img src="/img/logo.png" alt="Where Is My Loo Logo">

      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">

          <!--  City Selector -->
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
              <i class="bi bi-geo-alt"></i>
              <span id="selected-city">
                <% if (typeof searchedCity !=='undefined' && searchedCity) { %>
                  <%= searchedCity %>
                    <% } else { %>
                      Nagpur
                      <% } %>
              </span>
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item city-option" href="#" data-city="Nagpur, Maharashtra">Nagpur</a></li>
              <li><a class="dropdown-item city-option" href="#" data-city="Mumbai, Maharashtra">Mumbai</a></li>
              <li><a class="dropdown-item city-option" href="#" data-city="Delhi, India">Delhi</a></li>
              <li><a class="dropdown-item city-option" href="#" data-city="Pune, Maharashtra">Pune</a></li>
              <li><a class="dropdown-item city-option" href="#" data-city="Bangalore, Karnataka">Bangalore</a></li>
              <li><a class="dropdown-item city-option" href="#" data-city="Chennai, Tamil Nadu">Chennai</a></li>
              <li><a class="dropdown-item city-option" href="#" data-city="Kolkata, West Bengal">Kolkata</a></li>
              <li><a class="dropdown-item city-option" href="#" data-city="Hyderabad, Telangana">Hyderabad</a></li>
            </ul>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/toilets">Toilets</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/toilets/new">Add Toilet</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/about">About</a> <!-- Added About link -->
          </li>
        </ul>

        <ul class="navbar-nav ms-auto">
          <% if (!currentUser) { %>
            <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
            <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
            <% } else { %>
              <li class="nav-item">
                <span class="navbar-text me-2">
                  <% if (currentUser.profilePic) { %>
                    <img src="<%= currentUser.profilePic %>" alt="<%= currentUser.username %>'s profile picture"
                      class="rounded-circle" width="35" height="35"
                      style="margin-right: 0.75rem; border: 2px solid #2563eb;">
                    <% } else { %>
                      <span style="margin-right: 0.5rem; font-size: 1.5rem;">ðŸ‘¤</span>
                      <% } %>
                        Hi, <%= currentUser.username %>
                </span>
              </li>
              <li class="nav-item">
                <form action="/logout" method="POST" class="d-inline">
                  <button class="btn btn-outline-light btn-sm">Logout</button>
                </form>
              </li>
              <% } %>
        </ul>

      </div>

    </div>
  </nav>

  <!-- Flash messages -->
  <div class="container mt-3">
    <% if (success && success.length) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
      <% } %>

        <% if (error && error.length) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= error %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
          <% } %>
  </div>

  <!-- Page content -->
  <main class="container" style="margin-top: 2rem;">
    <%- body %>
  </main>
  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Production version -->
  <script src="https://unpkg.com/lucide@latest"></script>


</body>


<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Handle city selection
    const cityOptions = document.querySelectorAll('.city-option');
    const selectedCitySpan = document.getElementById('selected-city');

    // Update navbar based on current search
    const currentLocation = '<%= typeof searchedCity !== "undefined" && searchedCity ? searchedCity : "" %>';
    if (currentLocation) {
      selectedCitySpan.textContent = currentLocation;
    }

    cityOptions.forEach(option => {
      option.addEventListener('click', function (e) {
        e.preventDefault();
        const selectedCity = this.getAttribute('data-city');
        const cityName = this.textContent.trim();

        // Update the dropdown display immediately
        selectedCitySpan.textContent = cityName;

        // Create search URL with city parameter
        const searchUrl = `/toilets?location=${encodeURIComponent(selectedCity)}`;

        // Navigate to the search URL
        window.location.href = searchUrl;
      });
    });
  });
</script>

</html>