<% layout('layouts/boilerplate') %>

<div class="auth-container">
  <div class="auth-header">
    <h1 class="auth-title">ðŸš» Welcome Back</h1>
    <p class="auth-subtitle">Sign in to find toilets near you</p>
  </div>

  <form action="/login" method="POST" class="auth-form">
    <div class="form-group form-group-with-icon">
      <label class="form-label">Username</label>
      <i class="bi bi-person form-icon"></i>
      <input name="username" class="form-control" placeholder="Enter your username" required>
    </div>
    
    <div class="form-group form-group-with-icon">
      <label class="form-label">Password</label>
      <i class="bi bi-lock form-icon"></i>
      <input type="password" name="password" class="form-control" placeholder="Enter your password" required>
    </div>
    
    <button type="submit" class="btn auth-submit-btn">Sign In</button>
  </form>
  
  <!-- Divider -->
  <div class="auth-divider">
    <span>OR</span>
  </div>

  <!-- Google login button -->
  <div class="auth-social">
    <a href="/google" class="btn google-btn">
      <i class="bi bi-google"></i> Sign in with Google
    </a>
  </div>

  <div class="auth-links">
    <p>Don't have an account? <a href="/register" class="auth-link">Create one here</a></p>
  </div>
</div>