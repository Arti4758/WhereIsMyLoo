<% layout('layouts/boilerplate') %>
<!-- Load auth CSS -->

<div class="auth-container">
  <div class="auth-header">
    <h1 class="auth-title">ðŸš» Join Us</h1>
    <p class="auth-subtitle">Create your account to get started</p>
  </div>

  <form action="/register" method="POST" class="auth-form">
    <div class="form-group form-group-with-icon">
      <label class="form-label">Username</label>
      <i class="bi bi-person form-icon"></i>
      <input name="username" class="form-control" placeholder="Choose a username" required>
    </div>

    <div class="form-group form-group-with-icon">
      <label class="form-label">Email</label>
      <i class="bi bi-envelope form-icon"></i>
      <input type="email" name="email" class="form-control" placeholder="Enter your email" required>
    </div>

    <div class="form-group form-group-with-icon">
      <label class="form-label">Password</label>
      <i class="bi bi-lock form-icon"></i>
      <input type="password" name="password" class="form-control" placeholder="Create a password" required minlength="6">
    </div>

    <button type="submit" class="btn auth-submit-btn">Create Account</button>
  </form>

  <!-- Divider -->
  <div class="auth-divider">
    <span>OR</span>
  </div>

  <!-- Google login button -->
  <div class="auth-social">
    <a href="/google" class="btn google-btn">
      <i class="bi bi-google"></i> Sign in with Google
    </a>
  </div>

  <div class="auth-links">
    <p>Already have an account? <a href="/login" class="auth-link">Sign in here</a></p>
  </div>
</div>